# SSH Config - More in http://linux.die.net/man/5/ssh_config
Host *

  IdentityFile ~/.ssh/id_rsa

  # Forward ssh agent to the remote machine.
  ForwardAgent yes

  HashKnownHosts yes

  # Automatically add all common hosts to the host file as they are connected to.
  StrictHostKeyChecking no


# For vagrant virtual machines
# http://hakunin.com/six-ansible-practices#configure-your-ssh-client
Host 192.168.33.* *.loc

  StrictHostKeyChecking no
  
  UserKnownHostsFile=/dev/null
  
  LogLevel ERROR
  
  
Host ttdev
  HostName 192.168.0.215
  User ricardo.sierra
  
Host rancheros
  HostName 35.163.75.113
  User ubuntu
  IdentityFile ~/Ricardo/Servidores/Amazon_sierra.csi@gmail.com/Novo2016.pem
  
Host sitec
  HostName 35.167.160.68
  User ubuntu
  IdentityFile ~/Ricardo/Servidores/Amazon_ricardo@sierratecnologia.com.br/SITec_Infra_Server.pem
